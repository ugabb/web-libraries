generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Library {
  id           String @id @default(uuid())
  name         String
  description  String
  image        String
  github       String
  github_stars Int
  doc          String
  example_code String
  tag          Tag[]
}

model Tag {
  id   String @id @default(uuid())
  name String

  Library   Library? @relation(fields: [libraryId], references: [id])
  libraryId String?
}
